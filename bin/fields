#!/bin/bash

abort() {
    >&2 echo "$*"; exit 1;
}

usage() {
    abort """Extract fields from standard input, using awk rules for fields

Usage: $(basename $0) [OPTIONS] FIELD_NUMBER...

OPTIONS:

    -d --delimiter   String to separate fields with
    """
}

separator='\t'
while [ "${1#-}" != "$1" ]; do
    case "$1" in
        -h) usage;;
        -s|--separator)
            [ -z "$2" ] && usage;
            separator="$2";
            shift;;
        *) usage;;
    esac
    shift
done
[ -z "$1" ] && usage
separator='"'$(echo "$separator" | sed 's/"/\\"/g')'"'

fields=""
for field_no in $@
do
    if [ -z "$fields" ]; then
        fields="\$$field_no "
    else
        fields="$fields $separator \$$field_no "
    fi
done

awk "{ print $fields }"
