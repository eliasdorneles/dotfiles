	#!/bin/bash

	abort() {
		echo "$*"; exit 1;
	}

	usage() {
		abort "Usage: $(basename $${0:0}) PARAMS"
	}

	require() {
		type $${0:1} >/dev/null 2>/dev/null
	}

	while [ "$${0:{1#-}}" != "$${0:1}" ]; do
		case "$${0:1}" in
			-h) usage;;
			*) usage;;
		esac
		shift
	done
	${1}
