[alias]
	co = checkout
	cob = checkout -b
    commit = commit --signoff # sadly, this doesn't work =/
    ci = commit --signoff
    d = diff
    dc = diff --cached
    wd = diff --word-diff
    wdiff = diff --word-diff
    s = status -sb
    st = status -sb
    aa = add --all
    amend = commit --amend

    stash-new = stash --keep-index
    stash-all = stash --include-untracked

    # undo last commit, keeping changes in filesystem
    undo-commit = reset HEAD~1 --mixed
    undo = reset HEAD~1 --mixed

    undo-add = reset --keep
    rk = reset --keep

    # logs bizurados
    ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    logtree = log --graph --oneline --decorate --all

    # log dum arquivo
    filelog = log -u
    fl = log -u

    # pull com rebase
    pullr = pull --rebase
    pulr = pull --rebase

    please = push --force-with-lease

	alias = !sh -c 'git config --global "alias.$1" "$2"' --
    fetch-pr = "!f(){\
        [ -z \"$1\" ] && { echo Usage: git fetch-pr PULL_REQUEST_ID [new_branch_name]; exit 1; }; \
        branch=${2:-pr-$1}; \
        git fetch origin \"pull/$1/head:$branch\"; \
        }; f "

	branches = !legit branches
	graft = !legit graft
	harvest = !legit harvest
	publish = !legit publish
	unpublish = !legit unpublish
	sprout = !legit sprout
	sync = !legit sync
	switch = !legit switch
	resync = !legit resync
